  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Executable",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/Debug/mygame.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "build"
    },
    {
      "name": "Start Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/install/Debug/bin/mygame.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // "preLaunchTask": "CMake Build",
      "miDebuggerPath": "",
      "logging": {
        "moduleLoad": false
      },
      "visualizerFile": "${workspaceFolder}/.vscode/gdb.visualizer",
    }
  ]
}