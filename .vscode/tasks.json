{
  "tasks": [
    {
      "label": "Create Build Folder",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "detail": "Create the build folder"
    },
    {
      "label": "Delete Build Folder",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "detail": "Delete the build folder"
    },
    {
      "label": "CMake Generate",
      "type": "shell",
      "command": "cmake",
      "args": [
        "..",
        "-Wno-dev",
        "-B",
        "${workspaceFolder}/build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Generate project files using CMake",
      "dependsOn": "Create Build Folder"
    },
    {
      "label": "CMake build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task for building the CMake project."
    }
  ],
  "version": "2.0.0"
}